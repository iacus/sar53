<section>
  {% for item in presentation %}
    <div class="block">

      {% if item.title %}
        <h3 class="block-title text-01">{{ item.title }}</h3>
      {% endif %}

      {% if item.image %}
        {% image "src/"+item.image , "block-image img-contain", item.title, "(min-width: 30em) 50vw, 100vw" %}
      {% endif %}

      {% if item.gallery %}
        <div class="block-image swiper-container">
          <div class="swiper-wrapper">
            {% for image in item.gallery %}
              <div class="swiper-slide">
                {% image "src/"+image , "block-image img-contain", item.title, "(min-width: 30em) 50vw, 100vw" %}
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}

    </div>
  {% endfor %}
</section>
