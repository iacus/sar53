<section>

  <div class="block">

    {% if contact.image %}
      {% image "src/"+contact.image , "block-image mb-image img-contain", contact.title, "(min-width: 30em) 50vw, 100vw" %}
    {% endif %}

    <h2 class="section-title text-super">Contacto</h2>

    {% if contact.title %}
      <h3 class="block-title- text-01 mb-3">{{ contact.title|safe }}</h3>
    {% endif %}

    {% for item in contact.social %}
      <p class="text-01 mb-5">
        <a href="{{item.url}}" target="_blank">{{item.title}}</a>
      </p>
    {% endfor %}

    {% if contact.iframe %}
    <div class="block-map embed-responsive embed-responsive-16by9">
      {{contact.iframe|safe}}
    </div>

    {% endif %}

  </div>
</section>
